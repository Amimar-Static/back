// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id 
  name String
  email String @unique
  password String
  phone String
  register_date DateTime 
  account_state String
  adresses Adress[]
  @@map("users")
}

model Adress {
  id String @id 
  zipcode String
  state String 
  city String
  street String
  number String
  complement String
  //Relacionamento com user
  user User @relation(fields: [userId], references: [id])
  userId String

  @@map("adresses")
}


model Category {
  id String @id
  name String @unique
  image String?
  category_url String?
  products Product[]

  @@map("categories")
}

model Product {
  id String @id
  name String @unique
  description String
  value String
  available  Boolean
  highlighted Boolean
  image String?
  product_url String?
  register_date DateTime 
  category Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@map("products")
}


